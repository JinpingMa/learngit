{
  "name": "learngit",
  "version": "1.0.0",
  "description": "git subtree for git subproject test",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint . --ext .js,.jsx,.ts,.tsx ",
    "lint:js": "eslint . --ext .js;  exit 0",
    "lint:fix": "eslint . --ext .js,.jsx --fix && npm run lint:style  exit 0",
    "lint:style": "stylelint --fix \"src/**/*.wxss\"",
    "prettier": "prettier -c --write \"src/**/*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JinpingMa/learngit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JinpingMa/learngit/issues"
  },
  "homepage": "https://github.com/JinpingMa/learngit#readme",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "pre-push": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.wxss": "stylelint",
    "src/**/*.{js,jsx,tsx,ts,html,css,md,json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": "npm run lint-staged:js"
  }
}
